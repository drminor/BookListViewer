<Window x:Class="BookListViewer.Views.BookListWithDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookListViewer.Views"
        mc:Ignorable="d"
        Title="The Book List" Height="600" Width="800" MinHeight="250" MinWidth="300">
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock>
            <Label Content="Hello" FontSize="18pt"></Label>
            </TextBlock>
        </Grid>

        <Grid Grid.Row="1">
            <Border BorderThickness="2pt" BorderBrush="AliceBlue">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                    <Button Content="Close" Height="30" Width="100" Click="BtnClose_Click" FontSize="14pt" />
                </StackPanel>
            </Border>




        </Grid>

        
    </Grid>
    
    
    
    
    
</Window>
